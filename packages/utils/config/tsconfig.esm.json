{
  "extends": "./tsconfig.base.json",
  "display": "Build",
  "compilerOptions": {
    "rootDir": "..",
    "baseUrl": "..",
    "outDir": "../dist/esm",
    "moduleResolution": "bundler",
    "paths": {
      "~/*": ["src/*"]
    }
  },
  "include": ["../src"],
  "tsc-alias": {
    "resolveFullPaths": true,
    "resolveFullExtension": ".js"
  }
}
