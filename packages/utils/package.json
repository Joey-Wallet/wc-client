{
  "name": "@joey-wallet/wc-utils",
  "version": "1.0.1",
  "description": "A bundle of utilities and helper functions used alongside the wc packages.",
  "author": "Joey Wallet (https://joeywallet.xyz)",
  "license": "MIT",
  "keywords": [
    "wc",
    "utils"
  ],
  "homepage": "https://github.com/joey-wallet/wc-client/packages/utils/README.md",
  "repository": {
    "type": "git",
    "url": "https://github.com/joey-wallet/wc-client.git"
  },
  "bugs": {
    "url": "https://github.com/joey-wallet/wc-client/issues"
  },
  "type": "module",
  "main": "dist/cjs/index.cjs",
  "module": "dist/es/index.js",
  "types": "dist/types/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "exports": {
    ".": {
      "import": {
        "types": "./dist/types/index.d.ts",
        "default": "./dist/es/index.js"
      },
      "require": {
        "types": "./dist/types/index.d.ts",
        "default": "./dist/cjs/index.cjs"
      }
    }
  },
  "dependencies": {
    "big.js": "^7.0.1",
    "eventemitter3": "^5.0.1",
    "xrpl": "4.3.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.31.0",
    "@jest/globals": "^30.0.4",
    "@stylistic/eslint-plugin-js": "^4.4.1",
    "@types/big.js": "^6.2.2",
    "@types/jest": "^30.0.0",
    "@types/lodash": "^4.17.20",
    "@types/node": "^24.0.14",
    "@types/react": "^19.1.8",
    "@typescript-eslint/eslint-plugin": "^8.37.0",
    "@typescript-eslint/parser": "^8.37.0",
    "dotenv-cli": "^8.0.0",
    "eslint": "^9.31.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-config-standard-with-typescript": "^43.0.1",
    "eslint-plugin-import-x": "^4.16.1",
    "eslint-plugin-n": "^17.21.0",
    "eslint-plugin-prettier": "^5.5.1",
    "eslint-plugin-promise": "^7.2.1",
    "fs": "0.0.1-security",
    "globals": "^16.3.0",
    "jest": "^30.0.4",
    "lodash": "^4.17.21",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.0",
    "ts-morph": "^26.0.0",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.37.0"
  },
  "prettier": "./config/prettier.config.js",
  "scripts": {
    "env": "dotenv",
    "env:prod": "dotenv -e production",
    "-----": "",
    "ts": "pnpm tsx --tsconfig config/tsconfig.test.json",
    "---------": "",
    "prebuild": "rm -rf ./dist && rm -rf ./build",
    "postbuild": "rm -rf .bundle.zip && zip -r .bundle.zip dist src package.json tsconfig.json eslint.config.js config LICENSE",
    "c:esm": "tsc -P config/tsconfig.esm.json && tsc-alias -p config/tsconfig.esm.json",
    "c:cjs": "tsc -P config/tsconfig.cjs.json && tsc-alias -p config/tsconfig.cjs.json",
    "c": "pnpm c:esm & pnpm c:cjs && tsc-alias",
    "rebuild": "pnpm run c && pnpm postbuild",
    "------": "",
    "build": "vite build",
    "dev": "pnpm rebuild:watch",
    "gen": "pnpm run tsnode ./scripts/gen.ts && pnpm format",
    "--------": "",
    "lint": "eslint src --report-unused-disable-directives",
    "format": "prettier 'src' --write --list-different",
    "format:check": "prettier 'src' --check",
    "-------": "",
    "test": "pnpm jest --config ./config/jest.config.ts --all --coverage --forceExit",
    "testOne": "pnpm jest --config ./config/jest.config.ts --coverage --forceExit",
    "-----------": "",
    "prepub": "pnpm gen && pnpm build && pnpm test",
    "pub": "pnpm prepub && pnpm publish",
    "pub:beta": "pnpm pub --tag beta",
    "pub:next": "pnpm pub --tag next",
    "pub:release": "pnpm publish --no-git-checks --access public"
  }
}
