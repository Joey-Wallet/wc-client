{
  "extends": "../../../config/tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2020",
    "moduleResolution": "bundler",
    "baseUrl": "../src",
    "paths": {
      "~/*": [
        "./*"
      ]
    }
  },
  "include": [
    "../src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    ".nx",
    "coverage",
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/*.spec.tsx",
    "**/*.test.tsx",
    "**/*.test.*",
    "**/*.spec.*"
  ]
}
