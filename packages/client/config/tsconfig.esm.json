{
  "extends": "./tsconfig.base.json",
  "display": "Build",
  "compilerOptions": {
    "rootDir": "..",
    "baseUrl": "..",
    "outDir": "../dist/esm",
    "module": "preserve",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "~/*": ["src/*"]
    }
  },
  "include": ["../src"],
  "tsc-alias": {
    "resolveFullPaths": true,
    "resolveFullExtension": ".js"
  }
}
