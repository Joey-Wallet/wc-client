{
  "name": "@joey-wallet/wc-client",
  "version": "1.0.1",
  "description": "Client for intergrating WalletConnect and the XRP Ledger",
  "author": "Joey Wallet (https://joeywallet.xyz)",
  "license": "MIT",
  "keywords": [
    "walletconnect",
    "module",
    "xrpl"
  ],
  "packageManager": "pnpm@10.4.1",
  "type": "module",
  "main": "dist/cjs/src/index.js",
  "types": "dist/cjs/src/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "exports": {
    ".": {
      "import": {
        "types": "./dist/esm/src/index.d.ts",
        "default": "./dist/esm/src/index.js"
      },
      "require": {
        "types": "./dist/cjs/src/index.d.ts",
        "default": "./dist/cjs/src/index.js"
      }
    },
    "./core": {
      "import": {
        "types": "./dist/esm/src/core.d.ts",
        "default": "./dist/esm/src/core.js"
      },
      "require": {
        "types": "./dist/cjs/src/core.d.ts",
        "default": "./dist/cjs/src/core.js"
      }
    },
    "./utils": {
      "import": {
        "types": "./dist/esm/src/utils.d.ts",
        "default": "./dist/esm/src/utils.js"
      },
      "require": {
        "types": "./dist/cjs/src/utils.d.ts",
        "default": "./dist/cjs/src/utils.js"
      }
    },
    "./react": {
      "import": {
        "types": "./dist/esm/src/react.d.ts",
        "default": "./dist/esm/src/react.js"
      },
      "require": {
        "types": "./dist/cjs/src/react.d.ts",
        "default": "./dist/cjs/src/react.js"
      }
    }
  },
  "prettier": "./config/prettier.config.js",
  "scripts": {
    "env": "dotenv-run",
    "env:prod": "dotenv-run -e production",
    "-----": "",
    "ts": "pnpm tsx --tsconfig config/tsconfig.test.json",
    "---------": "",
    "prebuild": "rm -rf ./dist && rm -rf ./build",
    "postbuild": "rm -rf .bundle.zip && zip -r .bundle.zip dist src package.json tsconfig.json eslint.config.js config LICENSE",
    "c:esm": "tsc -P config/tsconfig.esm.json && tsc-alias -p config/tsconfig.esm.json",
    "c:cjs": "tsc -P config/tsconfig.cjs.json && tsc-alias -p config/tsconfig.cjs.json",
    "c": "pnpm c:cjs & pnpm c:esm && tsc-alias",
    "rebuild": "pnpm run c && pnpm postbuild",
    "rebuild:watch": "pnpm run c && pnpm postbuild",
    "------": "",
    "build": "pnpm prebuild && pnpm run c && pnpm postbuild",
    "dev": "pnpm rebuild:watch",
    "gen": "pnpm run tsnode ./scripts/gen.ts && pnpm format",
    "--------": "",
    "lint": "eslint src --report-unused-disable-directives",
    "deps": "dpdm --no-warning --no-tree -T src/index.ts",
    "format": "prettier 'src' --write --list-different",
    "format:check": "prettier 'src' --check",
    "-------": "",
    "test": "pnpm jest --config ./config/jest.config.ts --all --coverage --forceExit",
    "testOne": "pnpm jest --config ./config/jest.config.ts --coverage --forceExit"
  },
  "devDependencies": {
    "@eslint/js": "^9.21.0",
    "@jest/globals": "^29.7.0",
    "@stylistic/eslint-plugin-js": "^4.0.1",
    "@types/big.js": "^6.2.2",
    "@types/jest": "^29.5.14",
    "@types/lodash": "^4.17.15",
    "@types/node": "^22.13.4",
    "@types/react": "^19.1.0",
    "@typescript-eslint/eslint-plugin": "^8.24.1",
    "@typescript-eslint/parser": "^8.24.1",
    "eslint": "^9.21.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-config-standard-with-typescript": "^43.0.1",
    "eslint-plugin-import-x": "^4.6.1",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-prettier": "^5.2.3",
    "eslint-plugin-promise": "^6.6.0",
    "fs": "0.0.1-security",
    "globals": "^16.0.0",
    "jest": "^29.7.0",
    "lodash": "^4.17.21",
    "prettier": "^3.5.2",
    "ts-jest": "^29.2.6",
    "ts-morph": "^25.0.1",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.10",
    "tsx": "^4.19.3",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.25.0"
  },
  "dependencies": {
    "@joey-wallet/wc-core": "workspace:*",
    "@joey-wallet/wc-react": "workspace:*"
  }
}
