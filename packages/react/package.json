{
  "name": "@joey-wallet/wc-react",
  "version": "1.0.1",
  "description": "React components and utilities for intergrating WalletConnect and the XRP Ledger.",
  "author": "Joey Wallet (https://joeywallet.xyz)",
  "license": "MIT",
  "keywords": [
    "walletconnect",
    "module",
    "xrpl"
  ],
  "packageManager": "pnpm@10.4.1",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/types/src/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "exports": {
    ".": {
      "import": {
        "types": "./dist/types/src/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/types/src/index.d.ts",
        "default": "./dist/index.cjs"
      }
    },
    "./standalone": {
      "import": {
        "types": "./dist/types/src/standalone.d.ts",
        "default": "./dist/standalone.js"
      },
      "require": {
        "types": "./dist/types/src/standalone.d.ts",
        "default": "./dist/standalone.cjs"
      }
    }
  },
  "prettier": "./config/prettier.config.js",
  "scripts": {
    "build": "vite build",
    "dev": "vite build --watch",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --report-unused-disable-directives",
    "format": "prettier 'src' --write --list-different",
    "format:check": "prettier 'src' --check",
    "test": "pnpm jest --config ./config/jest.config.ts --all --coverage --forceExit",
    "testOne": "pnpm jest --config ./config/jest.config.ts --coverage --forceExit"
  },
  "devDependencies": {
    "@eslint/js": "^9.31.0",
    "@jest/globals": "^30.0.4",
    "@stylistic/eslint-plugin-js": "^4.4.1",
    "@types/big.js": "^6.2.2",
    "@types/jest": "^30.0.0",
    "@types/lodash": "^4.17.20",
    "@types/node": "^24.0.14",
    "@types/react": "^19.1.8",
    "@typescript-eslint/eslint-plugin": "^8.37.0",
    "@typescript-eslint/parser": "^8.37.0",
    "eslint": "^9.31.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-config-standard-with-typescript": "^43.0.1",
    "eslint-plugin-import-x": "^4.16.1",
    "eslint-plugin-n": "^17.21.0",
    "eslint-plugin-prettier": "^5.5.1",
    "eslint-plugin-promise": "^7.2.1",
    "fs": "0.0.1-security",
    "globals": "^16.3.0",
    "jest": "^30.0.4",
    "lodash": "^4.17.21",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.0",
    "ts-morph": "^26.0.0",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.37.0"
  },
  "dependencies": {
    "@joey-wallet/wc-utils": "workspace:*",
    "@joey-wallet/wc-core": "workspace:*",
    "@walletconnect/types": "2.21.5",
    "@walletconnect/universal-provider": "2.21.5",
    "@walletconnect/utils": "2.21.5",
    "eventemitter3": "^5.0.1",
    "react": "19.1.0",
    "react-dom": "19.1.0"
  }
}
