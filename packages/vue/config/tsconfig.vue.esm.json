{
  "extends": "./tsconfig.base.json",
  "display": "Vue ESM Build",
  "compilerOptions": {
    "rootDir": "../src",
    "baseUrl": "..",
    "outDir": "../dist/vue/esm/src",
    "module": "preserve",
    "moduleResolution": "bundler",
    "jsx": "preserve",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "~/*": ["src/*"]
    }
  },
  "include": ["../src"]
}