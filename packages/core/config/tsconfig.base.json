{
  "extends": "../../../config/tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2020",
    "baseUrl": "../src",
    "paths": {
      "~/*": [
        "./*"
      ],
      "@joey-wallet/wc-utils": ["../node_modules/@joey-wallet/wc-utils"]
    }
  },
  "include": [
    "../src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    ".nx",
    "coverage",
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/*.spec.tsx",
    "**/*.test.tsx",
    "**/*.test.*",
    "**/*.spec.*"
  ]
}
