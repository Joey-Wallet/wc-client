{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Build Configuration",
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "rootDir": "..",
    "baseUrl": "..",
    "outDir": "../dist/types",
    "module": "esnext",
    "moduleResolution": "bundler",
    "declaration": true,
    "declarationMap": true,
    "noEmit": false,
    "composite": false,
    "paths": {
      "~/*": ["src/*"]
    }
  },
  "include": ["../packages/*/src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "build", 
    ".nx",
    "coverage",
    "**/*.spec.*",
    "**/*.test.*"
  ]
}
